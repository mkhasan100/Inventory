@model SellerPoint.Models.Supplier

@{
    ViewData["Title"] = "Create";
}
<h4>Supplier Detail</h4>
<hr />
@*<div class="row">
    <div class="col-md-4">*@
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="Name" class="col-sm-2 form-control-label">First Name</label>
                <div class="col-sm-10">
                    <input asp-for="Name" class="form-control" name="Name" placeholder="Enter First Name"></>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Address" class="col-sm-2 form-control-label">First Address</label>
                <div class="col-sm-10">
                    <input asp-for="Address" class="form-control" name="Address" placeholder="Enter Address"></>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Country" class="col-sm-2 form-control-label">First Country</label>
                <div class="col-sm-10">
                    <input asp-for="Country" class="form-control" name="FirstName" placeholder="Enter Country"></>
                    <span asp-validation-for="Country" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="PhoneName" class="col-sm-2 form-control-label">First PhoneName</label>
                <div class="col-sm-10">
                    <input asp-for="PhoneName" class="form-control" name="PhoneName" placeholder="Enter PhoneName"></>
                    <span asp-validation-for="PhoneName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Remarks" class="col-sm-2 form-control-label">First Remarks</label>
                <div class="col-sm-10">
                    <input asp-for="Remarks" class="form-control" name="Remarks" placeholder="Enter Remarks"></>
                    <span asp-validation-for="Remarks" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="ContactPersonName" class="col-sm-2 form-control-label">First Contact Person Name</label>
                <div class="col-sm-10">
                    <input asp-for="ContactPersonName" class="form-control" name="ContactPersonName" placeholder="Enter Contact Person Name"></>
                    <span asp-validation-for="ContactPersonName" class="text-danger"></span>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
