@model SellerPoint.Models.Supplier

@{
    ViewData["Title"] = "Create";
}
<h4>Supplier Detail</h4>
<hr />
@*<div class="row">
    <div class="col-md-4">*@
<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 form-control-label">Name</label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" name="Name" placeholder="Enter Name"></>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Address" class="col-sm-2 form-control-label">Address</label>
        <div class="col-sm-10">
            <input asp-for="Address" class="form-control" name="Address" placeholder="Enter Address"></>
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Country" class="col-sm-2 form-control-label">Country</label>
        <div class="col-sm-10">
            <input asp-for="Country" class="form-control" name="Country" placeholder="Enter Country"></>
            <span asp-validation-for="Country" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="PhoneNumber" class="col-sm-2 form-control-label">PhoneName</label>
        <div class="col-sm-10">
            <input asp-for="PhoneNumber" class="form-control" name="PhoneName" placeholder="Enter PhoneName"></>
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Remarks" class="col-sm-2 form-control-label">Remarks</label>
        <div class="col-sm-10">
            <input asp-for="Remarks" class="form-control" name="Remarks" placeholder="Enter Remarks"></>
            <span asp-validation-for="Remarks" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="ContactPersonName" class="col-sm-2 form-control-label">Contact Person Name</label>
        <div class="col-sm-10">
            <input asp-for="ContactPersonName" class="form-control" name="ContactPersonName" placeholder="Enter Contact Person Name"></>
            <span asp-validation-for="ContactPersonName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-info" />
    </div>
</form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
