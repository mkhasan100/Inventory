@model SellerPoint.Models.Wallet

@{
    ViewData["Title"] = "Create";
}


<h4>New Wallet</h4>
<hr />
@*<div class="row">
    <div class="col-md-4">*@
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="WareHouse" class="col-sm-2 form-control-label">Ware House</label>
                <div class="col-sm-10">
                    @*<input asp-for="WareHouse" class="form-control" name="WareHouse" placeholder="Enter Ware House"></>*@
                    @Html.DropDownListFor(model => model.WareHouse, new SelectList(@ViewBag.WarehouseList, "Id", "Name"), "Select Warehouse", new{ @class="form-control"} )
                    <span asp-validation-for="WareHouse" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Title" class="col-sm-2 form-control-label">Title</label>
                <div class="col-sm-10">
                    <input asp-for="Title" class="form-control" name="Title" placeholder="Enter Title"></>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="AccountNumber" class="col-sm-2 form-control-label">Account Number</label>
                <div class="col-sm-10">
                    <input asp-for="AccountNumber" class="form-control" name="AccountNumber" placeholder="Enter Account Number"></>
                    <span asp-validation-for="AccountNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="BankName" class="col-sm-2 form-control-label">BankName</label>
                <div class="col-sm-10">
                    <input asp-for="BankName" class="form-control" name="BankName" placeholder="Enter BankName"></>
                    <span asp-validation-for="BankName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="WalletType" class="col-sm-2 form-control-label">Wallet Type</label>
                <div class="col-sm-10">
                    <input asp-for="WalletType" class="form-control" name="WalletType" placeholder="Enter Wallet Type"></>
                    <span asp-validation-for="WalletType" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="CardNumber" class="col-sm-2 form-control-label">Card Number</label>
                <div class="col-sm-10">
                    <input asp-for="CardNumber" class="form-control" CardNumber="Name" placeholder="Enter Card Number"></>
                    <span asp-validation-for="CardNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Balance" class="col-sm-2 form-control-label">Balance</label>
                <div class="col-sm-10">
                    <input asp-for="Balance" class="form-control" name="Balance" placeholder="Enter Balance"></>
                    <span asp-validation-for="Balance" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="MobileNumber" class="col-sm-2 form-control-label">Mobile Number</label>
                <div class="col-sm-10">
                    <input asp-for="MobileNumber" class="form-control" name="MobileNumber" placeholder="Enter Mobile Number"></>
                    <span asp-validation-for="MobileNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-info" />
            </div>
        </form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
