@model SellerPoint.Models.Courier

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>NewCourier</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="ContactPersonName" class="col-sm-2 form-control-label">Ware Contact Person Name</label>
                <div class="col-sm-10">
                    <input asp-for="ContactPersonName" class="form-control" name="ContactPersonName" placeholder="Enter Contact Person Name"></>
                    <span asp-validation-for="ContactPersonName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="CourierShop" class="col-sm-2 form-control-label">Courier Shop</label>
                <div class="col-sm-10">
                    <input asp-for="CourierShop" class="form-control" name="CourierShop" placeholder="Enter Courier Shop"></>
                    <span asp-validation-for="CourierShop" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
