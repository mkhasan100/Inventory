@model SellerPoint.Models.Warehouse

@{
    ViewData["Title"] = "Create";
}

<h4>New Warehouse</h4>
<hr />
@*<div class="row">
    <div class="col-md-4">*@
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="Name" class="col-sm-2 form-control-label">Name</label>
                <div class="col-sm-10">
                    <input asp-for="Name" class="form-control" name="Name" placeholder="Enter Name"></>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="StreetAddress" class="col-sm-2 form-control-label">Street Address</label>
                <div class="col-sm-10">
                    <input asp-for="StreetAddress" class="form-control" name="StreetAddress" placeholder="Enter Street Address"></>
                    <span asp-validation-for="StreetAddress" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Area" class="col-sm-2 form-control-label">Area</label>
                <div class="col-sm-10">
                    <input asp-for="Area" class="form-control" name="Area" placeholder="Enter Area"></>
                    <span asp-validation-for="Area" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="District" class="col-sm-2 form-control-label">District</label>
                <div class="col-sm-10">
                    <input asp-for="District" class="form-control" name="District" placeholder="Enter District"></>
                    <span asp-validation-for="District" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="IsMain" class="col-sm-2 form-control-label">IsMain</label>
                <div class="col-sm-10">
                    <input asp-for="IsMain" class="form-control" name="Name" placeholder="Enter IsMain"></>
                    <span asp-validation-for="IsMain" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
