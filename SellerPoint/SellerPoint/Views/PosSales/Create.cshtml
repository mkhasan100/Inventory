            <div class="col-sm-10">
                <input asp-for="Remark" class="form-control" name="Remark"></>
                <span asp-validation-for="Remark" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="OrderReferenceNumber" class="col-sm-2 form-control-label">Order Reference Number</label>
            <div class="col-sm-10">
                <input asp-for="OrderReferenceNumber" class="form-control" name="OrderReferenceNumber"></>
                <span asp-validation-for="OrderReferenceNumber" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="form-group row pt-3 pl-3">
        <a href="" type="submit" id="Save" class="btn btn-outline-info" value="Save">Save</a>
        <div class="ml-2">
            <a href="" type="submit" id="Print" class="btn btn-outline-info" value="Print">Print</a>
        </div>
        <div class="ml-2">
            <a href="" type="submit" id="Reset" class="btn btn-outline-info" value="Reset">Reset</a>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
