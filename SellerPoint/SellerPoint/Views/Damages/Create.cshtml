@model SellerPoint.Models.Damage

@{
    ViewData["Title"] = "Create";
}


<h4>New Damage Entry</h4>
<hr />
@*<div class="row">
    <div class="col-md-4">*@
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="WareHouse" class="col-sm-2 form-control-label">WareHouse</label>
                <div class="col-sm-10">
                    <input asp-for="WareHouse" class="form-control" name="WareHouse" placeholder="Enter WareHouse"></>
                    <span asp-validation-for="WareHouse" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="ProductDetial" class="col-sm-2 form-control-label">ProductDetial</label>
                <div class="col-sm-10">
                    <input asp-for="ProductDetial" class="form-control" name="ProductDetial" placeholder="Enter Product Detial"></>
                    <span asp-validation-for="ProductDetial" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Quantity" class="col-sm-2 form-control-label">Quantity</label>
                <div class="col-sm-10">
                    <input asp-for="Quantity" class="form-control" name="Quantity" placeholder="Enter Quantity"></>
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
