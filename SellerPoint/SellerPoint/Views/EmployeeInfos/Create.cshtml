@model SellerPoint.Models.EmployeeInfo

@{
    ViewData["Title"] = "Create";
}

<h4>Create Employee Info</h4>
<hr />
@*<div class="row">
    <div class="col-md-4">*@
<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 form-control-label">Name</label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" name="Name" placeholder="Enter Name"></>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Phone" class="col-sm-2 form-control-label">Phone</label>
        <div class="col-sm-10">
            <input asp-for="Phone" class="form-control" name="Phone" placeholder="Enter Phone"></>
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2 form-control-label">Email</label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control" name="Email" placeholder="Enter Email"></>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Salary" class="col-sm-2 form-control-label">Salary</label>
        <div class="col-sm-10">
            <input asp-for="Salary" class="form-control" name="Salary" placeholder="Enter Salary"></>
            <span asp-validation-for="Salary" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="SaleTargetAmount" class="col-sm-2 form-control-label">Sale Target Amount</label>
        <div class="col-sm-10">
            <input asp-for="SaleTargetAmount" class="form-control" name="SaleTargetAmount" placeholder="Enter Sale Target Amount"></>
            <span asp-validation-for="SaleTargetAmount" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="SaleAchivedAmount" class="col-sm-2 form-control-label">Sale Achived Amount</label>
        <div class="col-sm-10">
            <input asp-for="SaleAchivedAmount" class="form-control" name="SaleAchivedAmount" placeholder="Enter Sale Achived Amount"></>
            <span asp-validation-for="SaleAchivedAmount" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-info" />
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
